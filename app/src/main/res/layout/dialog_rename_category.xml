<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/drc_main_padding">

    <EditText
        android:id="@+id/etRenameCategory"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dnc_et_ncn_margin_start"
        android:textSize="@dimen/dnc_et_ncn_text_size"
        android:maxLength="25"
        android:maxLines="1" />

    <Button
        android:id="@+id/btnSaveRename"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/drc_btn_margin_start"
        android:text="@string/drc_btn"
        android:textColor="@color/colorPrimary"
        android:background="@color/viewBackground"
        app:layout_constraintStart_toEndOf="@id/etRenameCategory" />

</android.support.constraint.ConstraintLayout>