<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clCinemaAddSeatViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_bright"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/ivAddSeat"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_marginStart="@dimen/padd_10"
            android:src="@drawable/ic_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padd_10"
            android:text="Add Seat"
            android:textColor="#fff"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/ivAddSeat"
            app:layout_constraintTop_toTopOf="@id/ivAddSeat"
            app:layout_constraintBottom_toBottomOf="@id/ivAddSeat" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clCinemaDeleteViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_marginEnd="@dimen/padd_10"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padd_10"
            android:text="Delete"
            android:textColor="#fff"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/ivDelete"
            app:layout_constraintTop_toTopOf="@id/ivDelete"
            app:layout_constraintBottom_toBottomOf="@id/ivDelete"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clCinemaViewForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/ivCinemaLogo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:focusableInTouchMode="false"
            android:padding="10dp"
            tools:src="@drawable/cinema_city" />

        <TextView
            android:id="@+id/tvCinemaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Cinema City"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintStart_toEndOf="@id/ivCinemaLogo" />

        <TextView
            android:id="@+id/tvCinemaCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            tools:text="Rishon Lezion"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintStart_toEndOf="@id/ivCinemaLogo" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="50dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCinemaHalls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/ivCinemaLogo"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>