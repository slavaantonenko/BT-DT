<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/ich_padding"
    android:paddingBottom="@dimen/ich_padding"
    android:paddingStart="@dimen/ich_padding_sides"
    android:paddingEnd="@dimen/ich_padding_sides">

    <TextView
        android:id="@+id/tvHall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ich_text_size"
        android:textStyle="bold"
        android:textColor="@color/cinema_hall_text"
        android:text="@string/ic_hall"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvHallNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ich_text_size"
        android:textStyle="bold"
        android:textColor="@color/cinema_hall_text"
        tools:text="1"
        app:layout_constraintStart_toEndOf="@id/tvHall" />

    <TextView
        android:id="@+id/tvRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ich_text_size"
        android:textStyle="bold"
        android:textColor="@color/cinema_hall_text"
        android:text="@string/ic_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvRowNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ich_text_size"
        android:textStyle="bold"
        android:textColor="@color/cinema_hall_text"
        tools:text="9"
        app:layout_constraintStart_toEndOf="@id/tvRow" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="@dimen/ich_iv_status_size"
        android:layout_height="@dimen/ich_iv_status_size"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>