<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tvNewCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Create New Category"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvNewCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="Name: "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvNewCategoryTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_new_category_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:textSize="20sp"
        android:maxLength="25"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@id/tvNewCategoryName"
        app:layout_constraintBottom_toBottomOf="@id/tvNewCategoryName"
        app:layout_constraintStart_toStartOf="@id/tvNewCategoryName" />

    <TextView
        android:id="@+id/tvNewCategoryType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Type: "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvNewCategoryName"
        app:layout_constraintTop_toBottomOf="@id/tvNewCategoryName" />

    <Spinner
        android:id="@+id/choose_category_type"
        android:layout_width="195dp"
        android:layout_height="30dp"
        android:entries="@array/category_types"
        android:prompt="@string/category_type_prompt"
        app:layout_constraintStart_toStartOf="@id/et_new_category_name"
        app:layout_constraintTop_toTopOf="@id/tvNewCategoryType" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Save"
        android:textColor="@color/colorPrimary"
        android:background="@color/viewBg"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="@id/et_new_category_name"
        app:layout_constraintTop_toBottomOf="@id/choose_category_type" />

    <Space
        android:id="@+id/bottomSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/button_save" />

</android.support.constraint.ConstraintLayout>